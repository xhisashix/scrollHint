@import 'reset'
header
  height 80px
  background red
.section
  margin 0 auto
  max-width 980px
  background #ccc
  widows 90%
  .table
    overflow-y scroll
    margin 0 auto
    width 600px
    table
      border 1px solid #ddd
      tr
        box-sizing border-box
        padding 15px 20px
        min-height 30px
        border-top 1px solid #ddd
        th, td
          box-sizing border-box
          padding 20px
          min-width 150px
          background #eee
        td
          background #fff
